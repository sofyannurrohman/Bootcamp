<Window x:Class="ChessGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chess Game"
        Height="600"
        Width="600">

    <DockPanel>
        <!-- Top menu / Start button -->
        <StackPanel DockPanel.Dock="Top"
                Orientation="Horizontal"
                    HorizontalAlignment="Center"
                Margin="0,10,0,10">
            
        </StackPanel>

        <!-- Chessboard Grid (fills remaining space) -->
        <UniformGrid x:Name="ChessBoard"
                Rows="8"
                Columns="8"/>

        <!-- StatusBar at the bottom -->
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock x:Name="TurnStatus"
                        Text="White to move"/>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock x:Name="GameStatus"
                        Text=""
                        Foreground="Red"/>
            </StatusBarItem>
        </StatusBar>

    </DockPanel>
</Window>
