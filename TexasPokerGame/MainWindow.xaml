<Window x:Class="PokerGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokerGame"
        mc:Ignorable="d"
        Title="Poker Game with Emoji" Height="700" Width="1000">
    <Window.Resources>
        <Style TargetType="Button" x:Key="ActionButton">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Game Info -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <TextBlock Text="Pot: " FontWeight="Bold" Margin="0,0,5,0"/>
            <TextBlock x:Name="PotText" Text="0" FontWeight="Bold" Foreground="Goldenrod" Margin="0,0,20,0"/>
            
            <TextBlock Text="Current Bet: " FontWeight="Bold" Margin="0,0,5,0"/>
            <TextBlock x:Name="CurrentBetText" Text="0" FontWeight="Bold" Foreground="Red" Margin="0,0,20,0"/>
            
            <TextBlock Text="Min Raise: " FontWeight="Bold" Margin="0,0,5,0"/>
            <TextBlock x:Name="MinRaiseText" Text="0" FontWeight="Bold" Foreground="DarkOrange"/>
        </StackPanel>

        <!-- Game Area -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Opponents -->
            <ItemsControl x:Name="OpponentsControl" Grid.Row="0" ItemsSource="{Binding Opponents}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Gray" BorderThickness="1" Margin="10" Padding="10" CornerRadius="5">
                            <StackPanel>
                                <TextBlock Text="{Binding Name}" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding Status}" Foreground="Red" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding Chips, StringFormat='Chips: {0}'}" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding CurrentBet, StringFormat='Bet: {0}'}" HorizontalAlignment="Center"/>
                                <ItemsControl ItemsSource="{Binding Hand.Cards}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Emoji}" FontSize="24" Margin="2"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Community Cards -->
            <Border Grid.Row="1" BorderBrush="DarkGreen" BorderThickness="0,2" Background="#EFEFEF" Padding="10">
                <StackPanel>
                    <TextBlock Text="Community Cards" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <ItemsControl x:Name="CommunityCardsControl" ItemsSource="{Binding CommunityCards}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel HorizontalAlignment="Center"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Emoji}" FontSize="28" Margin="5"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- Player -->
            <Border Grid.Row="2" BorderBrush="Blue" BorderThickness="2" CornerRadius="5" Margin="10" Padding="10" Background="#EEF5FF">
                <StackPanel>
                    <TextBlock x:Name="PlayerNameText" Text="Player" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="PlayerChipsText" Text="Chips: 1000" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="PlayerBetText" Text="Current Bet: 0" HorizontalAlignment="Center"/>
                    
                    <ItemsControl x:Name="PlayerHandControl" ItemsSource="{Binding PlayerHand}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel HorizontalAlignment="Center"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Emoji}" FontSize="32" Margin="5"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                        <Button x:Name="FoldButton" Content="Fold" Style="{StaticResource ActionButton}" Background="LightCoral"/>
                        <Button x:Name="CheckButton" Content="Check" Style="{StaticResource ActionButton}" Background="LightBlue"/>
                        <Button x:Name="CallButton" Content="Call" Style="{StaticResource ActionButton}" Background="LightGreen"/>
                        <Button x:Name="RaiseButton" Content="Raise" Style="{StaticResource ActionButton}" Background="Gold"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5">
                        <TextBlock Text="Raise Amount: " VerticalAlignment="Center"/>
                        <TextBox x:Name="RaiseAmountTextBox" Width="60" Margin="5" Text="20"/>
                        <Button x:Name="AllInButton" Content="All In" Style="{StaticResource ActionButton}" Background="Orange"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Game Log -->
        <Border Grid.Row="2" BorderBrush="Gray" BorderThickness="1" Margin="10" Height="120">
            <TextBox x:Name="GameLogTextBox" IsReadOnly="True" VerticalScrollBarVisibility="Auto" FontFamily="Consolas"/>
        </Border>

        <!-- Game Controls -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="StartGameButton" Content="Start Game" Padding="20,5" FontWeight="Bold" Margin="5"/>
            <Button x:Name="NextRoundButton" Content="Next Round" Padding="20,5" FontWeight="Bold" Margin="5" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>