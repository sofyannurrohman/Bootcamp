<Window x:Class="BootcampDay8.PokerGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BootcampDay8.PokerGame"
        xmlns:converters="clr-namespace:BootcampDay8.PokerGame.Converters"
        xmlns:core="clr-namespace:BootcampDay8.PokerGame.Core"
        mc:Ignorable="d"
        Title="Poker Game" Height="600" Width="800">
    
    <Window.Resources>
        <converters:CardImageConverter x:Key="CardImageConverter"/>
        <converters:ActivePlayerConverter x:Key="ActivePlayerConverter"/>
        <converters:FoldedConverter x:Key="FoldedConverter"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Game Controls -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Deal" Command="{Binding DealCommand}" Margin="5" Padding="10"/>
            <Button Content="Bet" Command="{Binding BetCommand}" Margin="5" Padding="10"/>
            <Button Content="Fold" Command="{Binding FoldCommand}" Margin="5" Padding="10"/>
            <Button Content="Discard" Command="{Binding DiscardCommand}" Margin="5" Padding="10"/>
        </StackPanel>
        
        <!-- Players Area -->
        <ItemsControl Grid.Row="1" ItemsSource="{Binding Players}" Margin="10">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="2" Rows="2"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Black" BorderThickness="1" Margin="5" Padding="10"
                            Background="{Binding IsActive, Converter={StaticResource ActivePlayerConverter}}">
                        <StackPanel>
                            <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Chips, StringFormat='Chips: {0}'}"/>
                            <TextBlock Text="{Binding HasFolded, Converter={StaticResource FoldedConverter}}" 
                                       Foreground="Red" FontWeight="Bold"/>
                            <ItemsControl ItemsSource="{Binding Hand}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="Black" BorderThickness="1" Margin="2">
                                            <Image Width="50" Height="70" 
                                                   Source="{Binding Converter={StaticResource CardImageConverter}}"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="{Binding Pot, StringFormat='Pot: {0}'}"/>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Text="{Binding State, StringFormat='State: {0}'}"/>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Text="{Binding CurrentPlayer.Name, StringFormat='Current: {0}'}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>